<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer: the actual background of the CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Inner color -->
            <corners android:radius="16dp"/> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Border layer: the yellow border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#F4FF81"/> <!-- Yellow border color -->
            <corners android:radius="16dp"/> <!-- Corner radius to match the CardView -->
        </shape>
    </item>
</layer-list>
